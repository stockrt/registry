##########################################################
#
# This Makefile uses the following environment variables:
#  COREDX_TOP
#  COREDX_HOST
#  COREDX_TARGET
# These variables can be set manually, or determined by
# running the script  coredx/scripts/cdxenv.sh or cdxenv.bat
#
##########################################################

# Define our sources and objects
EXECUTABLE      = filter_pub.exe filter_sub.exe

# generated source code
GENSRCS     = filterTypeSupport.c filterDataReader.c filterDataWriter.c filter.c
GENHDRS     = filterTypeSupport.h filterDataReader.h filterDataWriter.h filter.h
GENOBJS     = $(GENSRCS:.c=.obj)

# Publisher sources and objects
filter_pub_CSRCS = filter_pub.c
filter_pub_COBJS = $(filter_pub_CSRCS:.c=.obj)
filter_pub_OBJS  = $(GENOBJS) $(filter_pub_COBJS)

# Subscriber sources and objects
filter_sub_CSRCS = filter_sub.c
filter_sub_COBJS = $(filter_sub_CSRCS:.c=.obj)
filter_sub_OBJS  = $(GENOBJS) $(filter_sub_COBJS)

##########################################################
# Setup Compile Environment
# We assume both gcc and coredx_ddl are in your path!
CC         = cl.exe
DDL        = $(COREDX_TOP)\host\$(COREDX_HOST)\bin\coredx_ddl.exe

INC_PATH   = -I$(COREDX_TOP)\target\include
LIBS       = $(COREDX_TOP)\target\$(COREDX_TARGET)\lib\dds_cf.lib WS2_32.lib Iphlpapi.lib winmm.lib user32.lib gdi32.lib shell32.lib advapi32.lib 
CFLAGS     = /nologo /MD $(INC_PATH) /DCOREDX_DLL

###########################################################
# NOTE: 
# The COREDX_DLL define ('/DCOREDX_DLL') is necessary for 
# when compiling code that will link against the 'DLL' 
# version of dds.lib
#
# If you want to link against the dynamic library, add the
# /DCOREDX_DLL compile flag, and list 'dds_cf.lib' 
# instead of 'dds_cf_static.lib'.
#
# [For now, the C++ library dds_cpp.lib requires the static
#  library dds_static.lib]
#
##########################################################


##########################################################
# Rules for compiling

all: $(EXECUTABLE) 

filter_pub.exe: $(filter_pub_OBJS)
	cl.exe /nologo /Fe$@ $** -link $(LIBS) 

filter_sub.exe:  $(filter_sub_OBJS)
	cl.exe /nologo /Fe$@ $** -link $(LIBS) 


##########################################################
# Rules for generating code from DDL

$(GENSRCS) $(GENHDRS): filter.ddl
	$(DDL) -f $**

##########################################################
# Rules for cleaning

clean:
	del  $(filter_pub_OBJS) $(filter_sub_OBJS) $(EXECUTABLE)

reallyclean: clean
	del $(GENSRCS) $(GENHDRS) 


##########################################################
# Additional dependencies
filter_pub.obj: filter.h filterTypeSupport.h filterDataWriter.h
filter_sub.obj: filter.h filterTypeSupport.h filterDataReader.h
filterTypeSupport.obj: filterTypeSupport.c filter.h filterTypeSupport.h
filterDataReader.obj: filterDataReader.c filter.h
filterDataWriter.obj: filterDataWriter.c filter.h
filter.obj: filter.c filter.h
