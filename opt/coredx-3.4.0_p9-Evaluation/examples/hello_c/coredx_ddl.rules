<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="CoreDX DDL"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="coredx_ddl"
			DisplayName="CoreDX DDL"
			CommandLine="$(COREDX_TOP)\host\$(COREDX_HOST)\bin\coredx_ddl.exe [language] -f [inputs] -b $(InputName)"
			Outputs="$(ProjectDir)$(InputName).h;$(ProjectDir)$(InputName).c;$(ProjectDir)$(InputName)DataReader.h;$(ProjectDir)$(InputName)DataReader.c;$(ProjectDir)$(InputName)DataWriter.h;$(ProjectDir)$(InputName)DataWriter.c;$(ProjectDir)$(InputName)TypeSupport.h;$(ProjectDir)$(InputName)TypeSupport.c;$(ProjectDir)$(InputName).hh;$(ProjectDir)$(InputName).cc;$(ProjectDir)$(InputName)DataReader.hh;$(ProjectDir)$(InputName)DataReader.cc;$(ProjectDir)$(InputName)DataWriter.hh;$(ProjectDir)$(InputName)DataWriter.cc;$(ProjectDir)$(InputName)TypeSupport.hh;$(ProjectDir)$(InputName)TypeSupport.cc"
			FileExtensions="*.ddl"
			ExecutionDescription="Generate DDS Code from DDL file"
			>
			<Properties>
				<EnumProperty
					Name="language"
					DisplayName="Language"
					Description="Target Language"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="-l c"
							DisplayName="C"
						/>
						<EnumValue
							Value="1"
							Switch="-l cpp"
							DisplayName="C++"
						/>
					</Values>
				</EnumProperty>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
