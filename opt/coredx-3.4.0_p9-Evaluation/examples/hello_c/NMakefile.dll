##########################################################
#
# This Makefile uses the following environment variables:
#  COREDX_TOP
#  COREDX_HOST
#  COREDX_TARGET
# These variables can be set manually, or determined by
# running the script  coredx/scripts/cdxenv.sh or cdxenv.bat
#
##########################################################

# Define our sources and objects
EXECUTABLE      = hello_pub.exe hello_sub.exe

# generated source code
GENSRCS     = helloTypeSupport.c helloDataReader.c helloDataWriter.c hello.c
GENHDRS     = helloTypeSupport.h helloDataReader.h helloDataWriter.h hello.h
GENOBJS     = $(GENSRCS:.c=.obj)

# Publisher sources and objects
hello_pub_CSRCS = hello_pub.c
hello_pub_COBJS = $(hello_pub_CSRCS:.c=.obj)
hello_pub_OBJS  = $(GENOBJS) $(hello_pub_COBJS)

# Subscriber sources and objects
hello_sub_CSRCS = hello_sub.c
hello_sub_COBJS = $(hello_sub_CSRCS:.c=.obj)
hello_sub_OBJS  = $(GENOBJS) $(hello_sub_COBJS)

##########################################################
# Setup Compile Environment
# We assume both gcc and coredx_ddl are in your path!
CC         = cl.exe
DDL        = $(COREDX_TOP)\host\$(COREDX_HOST)\bin\coredx_ddl.exe

INC_PATH   = -I$(COREDX_TOP)\target\include
LIBS       = $(COREDX_TOP)\target\$(COREDX_TARGET)\lib\dds.lib WS2_32.lib Iphlpapi.lib winmm.lib user32.lib gdi32.lib shell32.lib advapi32.lib 
CFLAGS     = /nologo /MD $(INC_PATH) /DCOREDX_DLL

###########################################################
# NOTE: 
# The COREDX_DLL define ('/DCOREDX_DLL') is necessary for 
# when compiling code that will link against the 'DLL' 
# version of dds.lib
#
# If you want to link against the dynamic library, add the
# /DCOREDX_DLL compile flag, and list 'dds.lib' 
# instead of 'dds_static.lib'.
#
##########################################################


##########################################################
# Rules for compiling

all: $(EXECUTABLE) 

hello_pub.exe: $(hello_pub_OBJS)
	cl.exe /nologo /Fe$@ $** -link $(LIBS) 

hello_sub.exe:  $(hello_sub_OBJS)
	cl.exe /nologo /Fe$@ $** -link $(LIBS) 


##########################################################
# Rules for generating code from DDL

$(GENSRCS) $(GENHDRS): hello.ddl
	$(DDL) -f $**

##########################################################
# Rules for cleaning

clean:
	del  $(hello_pub_OBJS) $(hello_sub_OBJS) $(EXECUTABLE)

reallyclean: clean
	del $(GENSRCS) $(GENHDRS) 


##########################################################
# Additional dependencies
hello_pub.obj: hello.h helloTypeSupport.h helloDataWriter.h
hello_sub.obj: hello.h helloTypeSupport.h helloDataReader.h
helloTypeSupport.obj: helloTypeSupport.c hello.h helloTypeSupport.h
helloDataReader.obj: helloDataReader.c hello.h
helloDataWriter.obj: helloDataWriter.c hello.h
hello.obj: hello.c hello.h
