##########################################################
#
# This Makefile uses the following environment variables:
#  COREDX_TOP
#  COREDX_HOST
#  COREDX_TARGET
# These variables can be set manually, or determined by
# running the script  coredx/scripts/cdxenv.sh or cdxenv.bat
#
##########################################################

# Define our sources and objects
EXECUTABLE        = hello_pub hello_sub

# Publisher sources and objects
hello_pub_CSRCS   = hello_pub.cc
hello_pub_COBJS   = ${hello_pub_CSRCS:.cc=.o}

hello_pub_GENSRCS = helloTypeSupport.cc helloDataWriter.cc helloDataReader.cc hello.cc
hello_pub_GENHDRS = helloTypeSupport.hh helloDataWriter.hh hello.hh
hello_pub_GENOBJS = ${hello_pub_GENSRCS:.cc=.o}

hello_pub_OBJS    = ${hello_pub_GENOBJS} ${hello_pub_COBJS} 

# Subscriber sources and objects
hello_sub_CSRCS   = hello_sub.cc
hello_sub_COBJS   = ${hello_sub_CSRCS:.cc=.o}

hello_sub_GENSRCS = helloTypeSupport.cc helloDataReader.cc helloDataWriter.cc hello.cc
hello_sub_GENHDRS = helloTypeSupport.hh helloDataReader.hh hello.hh
hello_sub_GENOBJS = ${hello_sub_GENSRCS:.cc=.o}

hello_sub_OBJS    = ${hello_sub_GENOBJS} ${hello_sub_COBJS}

##########################################################
# Setup Compile Environment

CXX        = g++pentium
DDL        = ${COREDX_TOP}/host/${COREDX_HOST}/bin/coredx_ddl

INC_PATH   = -I${COREDX_TOP}/target/include
LIB_PATH   = -L${WIND_BASE}/target/usr/lib/pentium/PENTIUM/common -L${COREDX_TOP}/target/${COREDX_TARGET}/lib

LIBS       = -ldds_cpp -ldds 

CXXFLAGS     = -mtune=i486 -march=i486 -ansi -mrtp -MD -MP -D_VX_CPU=_VX_PENTIUM -D_VX_TOOL_FAMILY=gnu -D_VX_TOOL=gnu -Wall -O2 -g ${INC_PATH} 
LDFLAGS    = -mrtp ${LIB_PATH} ${LIBS}


##########################################################

all: ${EXECUTABLE} 

hello_pub: ${hello_GENSRCS} ${hello_pub_OBJS}
	${CXX} -o $@ ${hello_pub_OBJS} ${LDFLAGS} 

hello_sub: ${hello_GENSRCS} ${hello_sub_OBJS}
	${CXX} -o $@ ${hello_sub_OBJS} ${LDFLAGS} 

##########################################################
# Rules for generating code from DDL

hello.cc : hello.ddl
	${DDL} -l cpp -f $<

%TypeSupport.cc :%.ddl
	${DDL} -l cpp -f $<

%DataWriter.cc :%.ddl
	${DDL} -l cpp -f $<

%DataReader.cc :%.ddl
	${DDL} -l cpp -f $<

##########################################################
# Rules for cleaning

clean:
	\rm -f ${hello_pub_OBJS} ${hello_sub_OBJS} ${EXECUTABLE}

reallyclean: clean
	\rm -f ${hello_pub_GENSRCS} ${hello_pub_GENHDRS} ${hello_sub_GENSRCS} ${hello_sub_GENHDRS} 


##########################################################
# Additional Dependencies
hello_pub.o: hello.hh helloTypeSupport.hh helloDataWriter.hh
hello_sub.o: hello.hh helloTypeSupport.hh helloDataReader.hh
helloTypeSupport.o: helloTypeSupport.cc hello.hh helloTypeSupport.hh
helloDataReader.o: helloDataReader.cc hello.hh helloDataReader.hh
helloDataWriter.o: helloDataWriter.cc hello.hh helloDataWriter.hh
hello.o: hello.cc hello.hh
