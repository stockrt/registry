##########################################################
#
# This Makefile uses the following environment variables:
#  COREDX_TOP
#  COREDX_HOST
#  COREDX_TARGET
# These variables can be set manually, or determined by
# running the script  coredx/scripts/cdxenv.sh or cdxenv.bat
#
##########################################################

# Define our sources and objects
EXECUTABLE        = hello_pub.exe hello_sub.exe

# generated source code
GENSRCS           = helloTypeSupport.cc helloDataReader.cc helloDataWriter.cc hello.cc
GENHDRS           = helloTypeSupport.hh helloDataReader.hh helloDataWriter.hh hello.hh
GENOBJS           = $(GENSRCS:.cc=.obj)

# Publisher sources and objects
hello_pub_CSRCS   = hello_pub.cc
hello_pub_COBJS   = $(hello_pub_CSRCS:.cc=.obj)
hello_pub_OBJS    = $(GENOBJS) $(hello_pub_COBJS)

# Subscriber sources and objects
hello_sub_CSRCS   = hello_sub.cc
hello_sub_COBJS   = $(hello_sub_CSRCS:.cc=.obj)
hello_sub_OBJS    = $(GENOBJS) $(hello_sub_COBJS)

##########################################################
# Setup Compile Environment
# We assume both gcc and coredx_ddl are in your path!
CC         = cl.exe
DDL        = $(COREDX_TOP)\host\$(COREDX_HOST)\bin\coredx_ddl.exe

INC_PATH   = -I$(COREDX_TOP)\target\include
LIBS       = $(COREDX_TOP)\target\$(COREDX_TARGET)\lib\dds_cpp_static.lib $(COREDX_TOP)\target\$(COREDX_TARGET)\lib\dds_static.lib WS2_32.lib Iphlpapi.lib winmm.lib user32.lib gdi32.lib shell32.lib advapi32.lib 
CPPFLAGS     = /nologo /MT /EHsc $(INC_PATH) 

###########################################################
# NOTE: 
# The COREDX_DLL define ('/DCOREDX_DLL') is necessary for 
# when compiling code that will link against the 'DLL' 
# version of dds.lib
#
# If you want to link against the dynamic library, add the
# /DCOREDX_DLL compile flag, and list 'dds_cpp.lib dds.lib' 
# instead of 'dds_cpp_static.lib dds_static.lib'.
#
##########################################################


##########################################################
# Rules for compiling

all: $(EXECUTABLE) 

hello_pub.exe: $(hello_pub_OBJS)
	cl.exe /nologo /Fe$@ $** -link $(LIBS) 

hello_sub.exe:  $(hello_sub_OBJS)
	cl.exe /nologo /Fe$@ $** -link $(LIBS) 


# inference rule for .cc files
.SUFFIXES:.cc
.cc.obj:
	$(CPP) $(CPPFLAGS) /c /Tp$*.cc

##########################################################
# Rules for generating code from DDL

$(GENSRCS) $(GENHDRS): hello.ddl
	$(DDL) -l cpp -f $**

##########################################################
# Rules for cleaning

clean:
	del  $(hello_pub_OBJS) $(hello_sub_OBJS) $(EXECUTABLE)

reallyclean: clean
	del $(GENSRCS) $(GENHDRS) 


##########################################################
# Additional dependencies
hello_pub.obj: hello.hh helloTypeSupport.hh helloDataWriter.hh
hello_sub.obj: hello.hh helloTypeSupport.hh helloDataReader.hh
helloTypeSupport.obj: helloTypeSupport.cc hello.hh helloTypeSupport.hh
helloDataReader.obj: helloDataReader.cc hello.hh
helloDataWriter.obj: helloDataWriter.cc hello.hh
hello.obj: hello.cc hello.hh
